<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="80dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/txtLoginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_login"
        android:textColor="@color/colorPink"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLoginHeader"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/label_email"
                android:textColor="@color/colorPink"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/label_password"
                android:textColor="@color/colorPink"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:autofillHints=""
                android:cursorVisible="true"
                android:drawableTop="@color/colorAccent"
                android:ems="10"
                android:fadingEdge="horizontal|vertical"
                android:hint="@string/label_email"
                android:importantForAccessibility="auto"
                android:inputType="textEmailAddress"
                android:maxLength="200"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableTop="@color/colorAccent"
                android:ems="10"
                android:fadingEdge="horizontal|vertical"
                android:hint="@string/label_password"
                android:imeOptions="actionDone|actionGo|actionSend"
                android:importantForAccessibility="auto"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLength="200"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        style="@style/VaraPhoneTheme"
        android:layout_below="@id/ll_form"
        android:layout_alignEnd="@id/ll_form"
        android:layout_marginTop="24dp"
        android:text="@string/label_login" />

    <Button
        android:id="@+id/signupButton"
        style="@style/SignUpButtonPhoneTheme"
        android:layout_below="@id/ll_form"
        android:layout_alignStart="@id/ll_form"
        android:layout_marginTop="24dp"
        android:background="@drawable/logo_background"
        android:gravity="center"
        android:text="@string/label_sign_up"
        android:textAlignment="center" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/signupButton"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_rounded_corners"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/label_home"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>
